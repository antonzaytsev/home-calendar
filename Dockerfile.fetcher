FROM ruby:3.2-slim

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    build-essential \
    && rm -rf /var/lib/apt/lists/*

# Install required gems
RUN gem install icalendar

# Copy the fetcher script
COPY webcal_fetcher.rb .

# Make the script executable
RUN chmod +x webcal_fetcher.rb

CMD ["ruby", "webcal_fetcher.rb"]
